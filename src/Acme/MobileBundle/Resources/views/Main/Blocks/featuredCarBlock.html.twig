{% for car in 0..5 %}
    {% if (car == 0) or (car == 3) %}
        <li>
    {% endif %}
                                            <div class="product-box spacer">
                                                <div class="browseImage">
                                                    <div class="new"></div>
                                                    {% set photos = featured[car].photo|split(';') %}
                                                    <a href="/car/{{ featured[car].id }}" class="img2"><img src="{{ photos[0] }}" alt="product18" class="browseProductImage featuredProductImage" border="0" /></a>
                                                </div>
                                                <div class="fleft">
                                                    <div class="Title">
                                                        <span class="count">{{ car }}.</span><a href="/car/{{ featured[car].id }}" title="{{ featured[car].model }}">{{ featured[car].model }}</a>
                                                    </div>
                                                    <div class="description">
                                                        <p>Тип: {{ featured[car].categoryid.category }}
                                                        <p>Состояние: {{ featured[car].conditionid.condition }}
                                                        <p>Первая регистрация: {{ featured[car].firstregistration }}
                                                    </div>
                                                    <div class="clear"></div>
                                                    <div class="Price">
                                                        <span class="sales">{{ (featured[car].price * app.session.get('rate'))|number_format(0, '.', ' ') }} {{ app.session.get('symb') }}</span><span class="WithoutTax">$133.10</span>
                                                    </div>
                                                    <div class="addtocart-area">
                                                        <form method="GET" action="/car/{{ featured[car].id }}">
                                                            <div class="addtocart-bar2">
                                                                <script src="{{ asset('/js/mylib7.js') }}" type="text/javascript"></script>
                                                                <div class="not_notyfi">
                                                                    <div class="clear"></div>
                                                                    <span class="addtocart-button">
                                                                        <i>&gt;</i>
                                                                        <input type="submit" name="detail"  class="addtocart-button cart-click" value="Подробнее" title="Подробнее" />
                                                                    </span>
                                                                    <div class="clear"></div>
                                                                </div>
                                                            </div>
                                                        </form>
                                                    </div>
                                                    <div class="clear"></div>
                                                </div>
                                            </div>
    {% if (car == 2) or (car == 5) %}
        </li>
    {% endif %}
{% endfor %}
